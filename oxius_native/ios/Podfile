# Uncomment this line to define a global platform for your project
platform :ios, '15.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

target 'RunnerTests' do
  inherit! :search_paths
end

post_install do |installer|
  sanitize_g_flags = lambda do |value|
    if value.is_a?(String)
      updated = value.gsub(/(^|\s)["']?-G\d*["']?(?=\s|$)/, '\\1')
      updated = updated.gsub(/[ ]{2,}/, ' ').strip
      return updated
    end

    return value unless value.is_a?(Array)

    value
      .map do |f|
        next f unless f.is_a?(String)
        f.gsub(/(^|\s)["']?-G\d*["']?(?=\s|$)/, '\\1').gsub(/[ ]{2,}/, ' ').strip
      end
      .reject { |f| f.is_a?(String) && f.strip.empty? }
  end

  sanitize_build_settings = lambda do |target, config|
    flag_key_prefixes = ['OTHER_CFLAGS', 'OTHER_CPLUSPLUSFLAGS', 'OTHER_LDFLAGS', 'OTHER_SWIFT_FLAGS']

    config.build_settings.keys.each do |key|
      key_str = key.to_s
      next unless flag_key_prefixes.any? { |prefix| key_str.start_with?(prefix) }

      old_value = config.build_settings[key]
      next unless old_value.is_a?(String) || old_value.is_a?(Array)
      next unless old_value.to_s.include?('-G')

      new_value = sanitize_g_flags.call(old_value)
      if old_value != new_value
        puts "[pods] Removed -G from #{target.name} (#{config.name}) #{key_str}"
      end
      config.build_settings[key] = new_value
    end
  end

  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    
    target.build_configurations.each do |config|
      # iOS deployment target
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.0'
      
      # Enable bitcode (required for some pods)
      config.build_settings['ENABLE_BITCODE'] = 'NO'
      
      # Exclude arm64 for simulator builds (M1 Mac compatibility)
      config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'arm64'
      
      # Fix for Xcode 14+ code signing
      config.build_settings['CODE_SIGN_IDENTITY'] = ''
      
      # Suppress warnings
      config.build_settings['GCC_WARN_INHIBIT_ALL_WARNINGS'] = 'YES'
      config.build_settings['SWIFT_SUPPRESS_WARNINGS'] = 'YES'
      
      # Privacy manifest requirements (iOS 17+)
      config.build_settings['CLANG_ALLOW_NON_MODULAR_INCLUDES_IN_FRAMEWORK_MODULES'] = 'YES'

      sanitize_build_settings.call(target, config)

      # Enable modules
      config.build_settings['CLANG_ENABLE_MODULES'] = 'YES'
    end
  end

  installer.aggregate_targets.each do |aggregate_target|
    user_project = aggregate_target.user_project
    next unless user_project

    user_project.targets.each do |target|
      target.build_configurations.each do |config|
        sanitize_build_settings.call(target, config)
      end
    end

    user_project.save
  end

  xcconfig_glob = File.join(installer.sandbox.root.to_s, 'Target Support Files', '**', '*.xcconfig')
  Dir.glob(xcconfig_glob).each do |xcconfig_path|
    begin
      contents = File.read(xcconfig_path)
      next unless contents.include?('-G')

      updated = contents.gsub(/(^|[\s"'=])-G\d*(?=\s|$|[\s"'])/, '\\1')
      updated = updated.gsub(/[ ]{2,}/, ' ')

      if updated != contents
        puts "[pods] Removed -G from xcconfig: #{File.basename(xcconfig_path)}"
        File.write(xcconfig_path, updated)
      end
    rescue
      next
    end
  end
end
