# Uncomment this line to define a global platform for your project
platform :ios, '15.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

target 'RunnerTests' do
  inherit! :search_paths
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.0'
      config.build_settings['ENABLE_BITCODE'] = 'NO'
      config.build_settings['GCC_WARN_INHIBIT_ALL_WARNINGS'] = 'YES'
      config.build_settings['SWIFT_SUPPRESS_WARNINGS'] = 'YES'
      config.build_settings['CLANG_ALLOW_NON_MODULAR_INCLUDES_IN_FRAMEWORK_MODULES'] = 'YES'
      config.build_settings['CLANG_ENABLE_MODULES'] = 'YES'
      
      # Strip -G flags from build settings
      %w[OTHER_CFLAGS OTHER_CPLUSPLUSFLAGS OTHER_LDFLAGS OTHER_SWIFT_FLAGS].each do |key|
        if config.build_settings[key].is_a?(String)
          config.build_settings[key] = config.build_settings[key].gsub(/-G[^ "]*/, '')
        elsif config.build_settings[key].is_a?(Array)
          config.build_settings[key] = config.build_settings[key].reject { |f| f.start_with?('-G') }
        end
      end
    end
    
    # CRITICAL FIX: Remove -GCC_WARN_INHIBIT_ALL_WARNINGS from BoringSSL-GRPC
    # source file compiler flags in build phases (Xcode 16+ compatibility)
    if target.name == 'BoringSSL-GRPC'
      target.source_build_phase.files.each do |file|
        if file.settings && file.settings['COMPILER_FLAGS']
          flags = file.settings['COMPILER_FLAGS']
          cleaned = flags.gsub(/-GCC_WARN_INHIBIT_ALL_WARNINGS/, '')
          cleaned = cleaned.gsub(/-G\b/, '')
          cleaned = cleaned.strip
          if cleaned != flags
            file.settings['COMPILER_FLAGS'] = cleaned
            puts "[Podfile] Cleaned BoringSSL-GRPC compiler flags: '#{flags}' -> '#{cleaned}'"
          end
        end
      end
    end
  end
  
  # Strip -G flags from all xcconfig files
  Dir.glob(File.join(installer.sandbox.root.to_s, 'Target Support Files', '**', '*.xcconfig')).each do |xcconfig_path|
    xcconfig = File.read(xcconfig_path)
    new_xcconfig = xcconfig.gsub(/-GCC_WARN_INHIBIT_ALL_WARNINGS/, '')
    new_xcconfig = new_xcconfig.gsub(/ -G\b/, '')
    if xcconfig != new_xcconfig
      File.open(xcconfig_path, 'w') { |f| f.write(new_xcconfig) }
      puts "[Podfile] Cleaned #{File.basename(xcconfig_path)}"
    end
  end
  
  # Also patch the BoringSSL-GRPC podspec directly if it exists
  boring_podspec = File.join(installer.sandbox.root.to_s, 'BoringSSL-GRPC', 'src', 'include')
  boring_xcconfig_files = Dir.glob(File.join(installer.sandbox.root.to_s, 'Target Support Files', 'BoringSSL-GRPC', '*.xcconfig'))
  boring_xcconfig_files.each do |path|
    content = File.read(path)
    new_content = content.gsub(/-GCC_WARN_INHIBIT_ALL_WARNINGS/, '')
    new_content = new_content.gsub(/ -G\b/, '')
    if content != new_content
      File.open(path, 'w') { |f| f.write(new_content) }
      puts "[Podfile] Patched BoringSSL-GRPC xcconfig: #{File.basename(path)}"
    end
  end
end
