# Add these dependencies to pubspec.yaml

dependencies:
  # Time formatting for posts and comments
  timeago: ^3.6.0
  
  # Better image caching and loading
  cached_network_image: ^3.3.0
  
  # Image viewer with zoom and swipe
  photo_view: ^0.14.0
  
  # Share functionality
  share_plus: ^7.2.1
  
  # HTML rendering for post content (if needed)
  flutter_html: ^3.0.0-beta.2

# Then run:
# flutter pub get
