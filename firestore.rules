rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function callDoc(callId) {
      return get(/databases/$(database)/documents/calls/$(callId));
    }

    function isParticipantByCallId(callId) {
      return isSignedIn() &&
          (request.auth.uid == callDoc(callId).data.callerId || request.auth.uid == callDoc(callId).data.calleeId);
    }

    function isCallerByCallId(callId) {
      return isSignedIn() && request.auth.uid == callDoc(callId).data.callerId;
    }

    function isCalleeByCallId(callId) {
      return isSignedIn() && request.auth.uid == callDoc(callId).data.calleeId;
    }

    match /calls/{callId} {
      allow create: if isSignedIn() &&
        request.resource.data.callerId == request.auth.uid &&
        request.resource.data.calleeId is string &&
        request.resource.data.calleeId.size() > 0 &&
        request.resource.data.type in ['audio', 'video'] &&
        request.resource.data.state == 'calling';

      // Allow read if user is caller or callee (for both get and list queries)
      allow read: if isSignedIn() && 
        (resource.data.callerId == request.auth.uid || resource.data.calleeId == request.auth.uid);

      // Allow update if user is caller or callee
      allow update: if isSignedIn() && 
        (resource.data.callerId == request.auth.uid || resource.data.calleeId == request.auth.uid) &&
        request.resource.data.callerId == resource.data.callerId &&
        request.resource.data.calleeId == resource.data.calleeId &&
        request.resource.data.type == resource.data.type;

      allow delete: if false;

      match /callerCandidates/{candidateId} {
        // Only caller can create their candidates
        allow create: if isSignedIn() && 
          get(/databases/$(database)/documents/calls/$(callId)).data.callerId == request.auth.uid;
        // Both participants can read
        allow read: if isSignedIn() && 
          (get(/databases/$(database)/documents/calls/$(callId)).data.callerId == request.auth.uid || 
           get(/databases/$(database)/documents/calls/$(callId)).data.calleeId == request.auth.uid);
        allow update, delete: if false;
      }

      match /calleeCandidates/{candidateId} {
        // Only callee can create their candidates
        allow create: if isSignedIn() && 
          get(/databases/$(database)/documents/calls/$(callId)).data.calleeId == request.auth.uid;
        // Both participants can read
        allow read: if isSignedIn() && 
          (get(/databases/$(database)/documents/calls/$(callId)).data.callerId == request.auth.uid || 
           get(/databases/$(database)/documents/calls/$(callId)).data.calleeId == request.auth.uid);
        allow update, delete: if false;
      }
    }
  }
}
